	//referencia1
	function tooltip(){
		var verEstado  = $("#cap").css('opacity');
		var verEstado1  = $("#cap1").css('opacity');
		var verEstado2  = $("#cap2").css('opacity');
		var verEstado3  = $("#cap3").css('opacity');
		
		if(verEstado==0){
			$("#cap").stop().animate({height:'137px',opacity:1},{queue:false, duration:800});
		}else{
			$("#cap").stop().animate({height:'0px',opacity:0},{queue:false, duration:800});
		}
		if(verEstado1!=0){
			$("#cap1").stop().animate({height:'0px',opacity:0},{queue:false, duration:800});
		}
		if(verEstado2!=0){
			$("#cap2").stop().animate({height:'0px',opacity:0},{queue:false, duration:800});
		}
		if(verEstado3!=0){
			$("#cap3").stop().animate({height:'0px',opacity:0},{queue:false, duration:800});
		}

	}
	$("#cap").stop().animate({height:'0px',opacity:0},{queue:false, duration:0});
	document.getElementById('cap').style.display="";
	document.getElementById("cap").style.marginTop = "55px";
	document.getElementById("cap").style.marginLeft = "460px";
	document.getElementById("cap").style.position = "absolute";
	estilo=document.getElementById("cap").style.zIndex+1000
	document.getElementById("cap").style.zIndex=estilo;
	//fin referencia1
	
