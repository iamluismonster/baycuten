function larger() { 
    if (newsfont < 30) { 
        newsfont= newsfont +2; 
        changeFont('content'); 
    } 
} 

function smaller() { 
    if (newsfont > 10) { 
    newsfont= newsfont -2; 
    changeFont('content'); 
    } 
} 
